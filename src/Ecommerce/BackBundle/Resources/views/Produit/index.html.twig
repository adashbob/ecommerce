{% extends ':layout:layout_admin.html.twig' %}

{% block body -%}
    <h1>Produits list</h1>

    <table class="table table-striped table-hover records_list table  table-bordered" id="tab">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Disponible</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.available }}</td>
                <td>
                    <a href="{{ path('back_produits_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('back_produits_update', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('back_produits_create') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
