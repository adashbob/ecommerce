{% extends ':layout:layout_admin.html.twig' %}

{% block body -%}
    <h1>Produits</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ entity.price }}</td>
        </tr>
        <tr>
            <th>Disponible</th>
            <td>{{ entity.available }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('back_produits') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('back_produits_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
