{% extends ":layout:layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="span3">
                {% include ':includes:navigation.html.twig' %}
            </div>

            <div class="span9">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% block body_content %} {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}