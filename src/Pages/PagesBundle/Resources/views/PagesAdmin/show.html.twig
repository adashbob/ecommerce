{% extends ':layout:layout_admin.html.twig' %}

{% block body -%}
    <h1>Pages</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td>{{ entity.contenu | raw }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('adminPages_index') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('adminPages_edit', { 'slug': entity.slug }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
